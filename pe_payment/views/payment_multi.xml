<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="account_payment_multi_form_view" model="ir.ui.view">
            <field name="name">account.payment_multi.form</field>
            <field name="model">account.payment_multi</field>
            <field name="arch" type="xml">
                <form string="Pagos multiples">
                    <header>
                        <button name="action_confirm" string="Confirmar" type="object" class="oe_highlight"
                                attrs="{'invisible': ['|',
                                        ('state', '!=', 'draft'),
                                        ('line_ids', '==', []),
                                ]}"/>
                        <button name="action_draft" string="Restablecer a borrador" type="object"
                                class="btn btn-secondary"
                                attrs="{'invisible': [('state', 'not in', ('confirm', 'cancel'))]}"
                                groups="account.group_account_invoice"/>
                        <button name="action_cancel" string="Cancelar" type="object"
                                attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,confirm,payment,cancel"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button"
                                    type="object"
                                    name="action_view_payment"
                                    icon="fa-list-ul"
                                    attrs="{'invisible': [('payment_ids', '=', [])]}"
                            >
                                <field name="payment_count" widget="statinfo" string="Pagos"
                                       options="{'reload_on_button': true}"/>
                            </button>
                        </div>
                        <div class="oe_title">
                            <!--                            <label for="name"/>-->
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
                            <div class="row o_td_label ml-1">
                                <label for="partner_ids" string="Proveedores" style="font-weight:bold;"
                                       attrs="{'invisible': [('partner_type', '=', 'customer')]}"/>
                                <label for="partner_ids" string="Clientes" style="font-weight:bold;"
                                       attrs="{'invisible': [('partner_type', '=', 'supplier')]}"/>

                                <field name="partner_ids" widget="many2many_tags"
                                       options="{'no_create':True,'no_create_edit': True}"/>
                            </div>
                        </group>
                        <group>
                            <group>
                                <field name="partner_type" invisible="1"/>
                                <field name="payment_ids" widget="many2many_tags" invisible="1"/>
                                <field name="expiration_date"/>
                                <field name="user_id" widget="many2one_avatar_user"/>
                                <field name="company_id" groups="base.group_multi_company"/>

                            </group>
                            <group>
                                <!--                                <field name="partner_type" widget="radio" options="{'horizontal': True}"/>-->
                                <field name="generation_type" widget="radio" options="{'horizontal': True}"/>
                                <field name="journal_id"/>
                                <field name="payment_move_id"
                                       attrs="{'invisible': [
                                       '|', ('generation_type', '=', 'individual'),
                                            ('payment_move_id', '=', False)
                                       ]}"
                                />
                                <field name="currency_id" options="{'no_create':True,'no_create_edit': True}"/>

                            </group>
                        </group>

                        <notebook>
                            <page name="page_lines" string="Facturas" attrs="{'invisible': [('id', '=', False)]}">
                                <header>
                                    <button name="action_load_invoices"
                                            string="CARGAR COMPROBANTES"
                                            class="btn btn-sm btn-primary text-white"
                                            icon="fa-hand-o-right" style="color:green;"
                                            type="object" attrs="{'invisible': [('state','!=','draft')]}"
                                            help="Seleccione todos los comprobantes a pagar"/>
                                    <button name="clear_invoices"
                                            string="LIMPIAR" class="btn btn-sm btn-warning"
                                            icon="fa-paint-brush"
                                            type="object"
                                            confirm="Esta seguro(a) quitar los comprobantes seleccionados ?"
                                            attrs="{'invisible': ['|',('state','!=','draft'), ('line_ids', '=', [])]}"
                                            help="Quitará todos los items seleccionados en la lista"/>
                                </header>
                                <field
                                        name="line_ids"
                                        widget="section_and_note_one2many"
                                        context="{'default_payment_multi_id': id}"
                                        mode="tree,form">

                                    <tree editable="bottom" delete="1" create="0">
                                        <field name="sequence" widget="handle"/>
                                        <field name="move_line_id"
                                               domain="['&amp;','&amp;','&amp;','&amp;',
                                                       ('partner_id','in', parent.partner_ids),
                                                       ('parent_state','=','posted'),
                                                       ('account_internal_type','in',('receivable','payable')),('reconciled','=',False)]"/>
                                        <field name="partner_id" widget="many2one_avatar"/>
                                        <field name="invoice_date"/>
                                        <field name="invoice_origin"/>
                                        <field name="invoice_user_id" widget="many2one_avatar_user"/>
                                        <field name="expiration_date"/>
                                        <field name="currency_id" invisible="1"/>
                                        <field name="amount" widget="monetary"
                                               sum="amount"
                                               options="{'currency_field': 'currency_id'}"/>
                                        <field name="amount_residual" widget="monetary"
                                               sum="amount"
                                               options="{'currency_field': 'currency_id'}"/>
                                        <field name="amount_payable" widget="monetary"
                                               sum="amount_payable"
                                               options="{'currency_field': 'moneda_id', 'bg_color': '#bff6dc'}"/>
                                        <field name="payment_id"
                                               attrs="{'column_invisible': [('parent.generation_type', '=', 'massive')]}"
                                               optional="show"/>
                                    </tree>
                                </field>
                            </page>

                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="account_payment_multi_tree_view" model="ir.ui.view">
            <field name="name">account.payment_multi.tree</field>
            <field name="model">account.payment_multi</field>
            <field name="arch" type="xml">
                <tree string="Pagos multiples" default_order="date desc">
                    <field name="name"/>
                    <field name="date"/>
                    <field name="journal_id"/>
                    <field name="partner_ids" widget="many2many_tags"/>
                    <field name="state" widget="badge" decoration-info="state == 'draft'"
                           decoration-success="state == 'confirm'"/>
                    <field name="currency_id" invisible="1"/>
                    <field name="company_id" groups="base.group_multi_company"/>

                </tree>
            </field>
        </record>

        <record id="account_payment_multi_search_view" model="ir.ui.view">
            <field name="name">account.payment_multi.search</field>
            <field name="model">account.payment_multi</field>
            <field name="arch" type="xml">
                <search string="Pagos multiples">
                    <group expand="1" string="Group By">
                        <filter string="Diario" name="group_journal_id" domain="[]"
                                context="{'group_by':'journal_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="account_payment_multi_act_window" model="ir.actions.act_window">
            <field name="name">Pagos multiples proveedores</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">account.payment_multi</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('partner_type', '=', 'supplier')]</field>
            <field name="context">{
                'default_payment_type': 'outbound',
                'default_partner_type': 'supplier',
            }</field>
            <!--            <field name="view_id" ref="view_account_supplier_payment_tree"/>-->
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    ¡Cree su primer pago multiple para proveedores!
                </p>
            </field>
        </record>

        <record id="account_payment_multi_customer_act_window" model="ir.actions.act_window">
            <field name="name">Pagos multiples clientes</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">account.payment_multi</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('partner_type', '=', 'customer')]</field>
            <field name="context">{
                'default_payment_type': 'inbound',
                'default_partner_type': 'customer',
            }</field>
            <!--            <field name="view_id" ref="view_account_supplier_payment_tree"/>-->
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    ¡Cree su primer pago multiple para clientes!
                </p>
            </field>
        </record>


    </data>
</odoo>