<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="mueve_a4_paperformat" model="report.paperformat">
            <field name="name">Mueve: A4</field>
            <field name="default" eval="True"/>
            <field name="format">A4</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">32</field>
            <field name="margin_bottom">32</field>
            <field name="margin_left">7</field>
            <field name="margin_right">7</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">28</field>
            <field name="dpi">90</field>
        </record>

        <record id="purchase.action_report_purchase_order" model="ir.actions.report">
            <field name="paperformat_id" ref="mblz_mueve.mueve_a4_paperformat"/>
        </record>


        <template id="mueve_report_purchaseorder_document" inherit_id="purchase.report_purchaseorder_document">
            <xpath expr="//t[@t-call='web.external_layout']" position="replace">
                <t t-call="mblz_mueve.layout_purchase_order_mueve">
                    <t t-set="o" t-value="o.with_context(lang=o.partner_id.lang)"/>
                    <div class="row" style="font-size: 14px;">
                        <div class="col-6" name="company_address">
                            <t t-if="o.dest_address_id">
                                <strong>Dirección de envío:</strong>
                                <div t-if="o.dest_address_id">
                                    <div t-field="o.dest_address_id"
                                         t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'
                                         name="purchase_shipping_address"/>
                                </div>

                            </t>
                            <t t-else="">
                                <strong>Dirección de envío:</strong>
                                <div t-if="o.picking_type_id and o.picking_type_id.warehouse_id">
                                    <span t-field="o.picking_type_id.warehouse_id.name"/>
                                    <div t-field="o.picking_type_id.warehouse_id.partner_id"
                                         t-options='{"widget": "contact", "fields": ["address", "phone"], "no_marker": False, "phone_icons": True}'/>
                                </div>
                            </t>
                        </div>
                        <div class="col-6" style="font-size: 13px !important;">
                            <strong>Proveedor:</strong>
                            <div t-field="o.partner_id"
                                 class="ml-2"
                                 t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'/>
                            <p class="ml-2" t-if="o.partner_id.vat"><t
                                    t-esc="o.company_id.country_id.vat_label or 'Tax ID'"/>: <span
                                    t-field="o.partner_id.vat"/></p>

                        </div>

                    </div>

                    <br/>
                    <div class="page">
                        <div class="oe_structure"/>

                        <div id="informations" class="row mt32 mb32" style="font-size: 14px;">
                            <div t-if="o.user_id" class="col-4 bm-2">
                                <strong>Representante de la Compra:</strong>
                                <p t-field="o.user_id" class="m-0"/>
                                <ul class="list-inline" style="font-size: 10px important!;">
                                    <li t-if="o.user_id.email"><b><i
                                            class="fa fa-envelope text-small"></i></b> <span
                                            t-esc="o.user_id.email"/></li>
                                    <li t-if="o.user_id.mobile"><b><i
                                            class="fa fa-phone  text-small"></i></b> <span
                                            t-esc="o.user_id.phone"/></li>
                                </ul>
                            </div>
                            <div t-if="o.partner_ref" class="col-2 bm-2">
                                <strong>Referencia:</strong>
                                <p t-field="o.partner_ref" class="m-0"/>
                            </div>
                            <div t-if="o.date_order" class="col-3 bm-2">
                                <strong>Fecha de Compra:</strong>
                                <p t-field="o.date_order" class="m-0"/>
                            </div>
                            <div t-if="o.date_planned" class="col-3 bm-2">
                                <strong>Fecha de Entrega:</strong>
                                <p t-field="o.date_planned" class="m-0"/>
                            </div>
                        </div>

                        <br/><br/>
                        <table class="table table-sm o_main_table" style="font-size: 14px;">
                            <thead>
                                <tr>
                                    <th name="th_description"><strong>Descripción</strong></th>
                                    <th name="th_default_code"><strong>Referencia</strong></th>
                                    <!--                                    <th name="th_taxes"><strong>Taxes</strong></th>-->
                                    <!--                                    <th name="th_date_req" class="text-center"><strong>Date Req.</strong></th>-->
                                    <th name="th_quantity" class="text-right"><strong>Cantidad</strong></th>
                                    <th name="th_price_unit" class="text-right"><strong>Precio Unitario</strong></th>
                                    <th name="th_amount" class="text-right"><strong>Monto</strong></th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-set="current_subtotal" t-value="0"/>
                                <t t-foreach="o.order_line" t-as="line">
                                    <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal"
                                       groups="account.group_show_line_subtotals_tax_excluded"/>
                                    <t t-set="current_subtotal" t-value="current_subtotal + line.price_total"
                                       groups="account.group_show_line_subtotals_tax_included"/>

                                    <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                                        <t t-if="not line.display_type">
                                            <td>
                                                <span t-field="line.product_id.name"/>
                                            </td>
                                            <td>
                                                <span t-field="line.product_id.default_code"/>
                                            </td>
                                            <!--                                            <td name="td_taxes">-->
                                            <!--                                                <span t-esc="', '.join(map(lambda x: x.name, line.taxes_id))"/>-->
                                            <!--                                            </td>-->
                                            <!--                                            <td class="text-center">-->
                                            <!--                                                <span t-field="line.date_planned"/>-->
                                            <!--                                            </td>-->
                                            <td class="text-right">
                                                <span t-field="line.product_qty"/>
                                                <span t-field="line.product_uom.name" groups="uom.group_uom"/>
                                            </td>
                                            <td class="text-right">
                                                <span t-field="line.price_unit"/>
                                            </td>
                                            <td class="text-right">
                                                <span t-field="line.price_subtotal"
                                                      t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                            </td>
                                        </t>
                                        <t t-if="line.display_type == 'line_section'">
                                            <td colspan="99" id="section">
                                                <span t-field="line.name"/>
                                            </td>
                                            <t t-set="current_section" t-value="line"/>
                                            <t t-set="current_subtotal" t-value="0"/>
                                        </t>
                                        <t t-if="line.display_type == 'line_note'">
                                            <td colspan="99" id="note">
                                                <span t-field="line.name"/>
                                            </td>
                                        </t>
                                    </tr>
                                    <t t-if="current_section and (line_last or o.order_line[line_index+1].display_type == 'line_section')">
                                        <tr class="is-subtotal text-right">
                                            <td colspan="99" id="subtotal">
                                                <strong class="mr16">Subtotal</strong>
                                                <span
                                                        t-esc="current_subtotal"
                                                        t-options='{"widget": "monetary", "display_currency": o.currency_id}'
                                                />
                                            </td>
                                        </tr>
                                    </t>
                                </t>
                            </tbody>
                        </table>

                        <div id="total" class="row justify-content-end">
                            <div class="col-4">
                                <table class="table table-sm">
                                    <tr class="border-black">
                                        <td name="td_subtotal_label"><strong>Subtotal</strong></td>
                                        <td class="text-right">
                                            <span t-field="o.amount_untaxed"
                                                  t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td name="td_taxes_label">Impuestos</td>
                                        <td class="text-right">
                                            <span t-field="o.amount_tax"
                                                  t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                        </td>
                                    </tr>
                                    <tr class="border-black o_total">
                                        <td name="td_amount_total_label"><strong>Total</strong></td>
                                        <td class="text-right">
                                            <span t-field="o.amount_total"
                                                  t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>

                        <p t-field="o.notes"/>
                        <div class="oe_structure"/>
                    </div>
                </t>
            </xpath>
        </template>
    </data>
</odoo>