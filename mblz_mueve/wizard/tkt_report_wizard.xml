<odoo>
    <data>
        <record id="tkt_report_wz_wizard" model="ir.ui.view">
            <field name="name">tkt.report.wz.wizard</field>
            <field name="model">tkt.report.wz</field>
            <field name="arch" type="xml">
                <form>
                    <!--                    <div class="alert alert-primary" role="alert">-->
                    <!--                        <p><b>Nota: </b><u>Nivel de falla vacío</u> significa que se utilizará todos los niveles de falla.</p>-->
                    <!--                    </div>-->

                    <group class="col-8">
                        <div class="o_td_label">
                            <label for="ticket_type_id"/>
                        </div>
                        <div class="o_row">
                            <field name="ticket_type_id" widget="selection" required="1"
                                   attrs="{'invisible': [('flag_all', '=', True)]}"/> <b>Todos </b>
                            <field name="flag_all" widget="boolean_toggle" class="text-right"/>
                        </div>
                        <!--                        <field name="ticket_type_id" widget="selection"/>-->
                        <field name="range" widget="radio" options="{'horizontal': True}"/>
                    </group>
                    <group attrs="{'invisible': [('range', '=', 'all')]}">
                        <label for="date_start"
                               string="Desde / Hasta"
                               attrs="{'invisible': [('range', '!=', 'dates')]}"/>
                        <div attrs="{'invisible': [('range', '!=', 'dates')]}">
                            <field name="date_start"
                                   class="oe_inline"
                                   options="{'datepicker': {'warn_future': true}}"
                                   attrs="{'required': [('range', '=', 'dates')]}"/>
                            <span></span>
                            <field name="date_end"
                                   class="oe_inline"
                                   options="{'datepicker': {'warn_future': true}}"
                                   attrs="{'required': [('range', '=', 'dates')]}"/>
                        </div>
                        <field name="date_def"
                               class="col-6"
                               options="{'datepicker':{'maxDate': 'now'}}"
                               attrs="{'invisible': [('range', '!=', 'date')]}"/>

                        <label for="month"
                               string="Mes / año"
                               attrs="{'invisible': [('range', '!=', 'month')]}"/>
                        <div attrs="{'invisible': [('range', '!=', 'month')]}">
                            <field name="month"
                                   class="oe_inline"
                                   attrs="{'required': [('range', '=', 'month')]}"/>
                            <span>/</span>
                            <field name="year"
                                   class="oe_inline"
                                   attrs="{'required': [('range', '=', 'month')]}"/>
                        </div>
                    </group>
                    <footer>
                        <button string='Aceptar' name="action_view_screen" type="object"
                                class="btn-primary"/>
                        <button string="Cancelar" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_tkt_report_wz" model="ir.actions.act_window">
            <field name="name">Reporte Tickets</field>
            <field name="res_model">tkt.report.wz</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>


        <menuitem
                id="menu_mblz_helpdesk_reporting"
                name="Reporte Tickets"
                parent="helpdesk.helpdesk_ticket_report_menu_main"
                action="action_tkt_report_wz"
                sequence="-100"/>
        />
    </data>
</odoo>