              inherit_id="stock.report_replenishment_header">
        <xpath expr="//div[@name='pending_forecasted']" position="after">
            <div t-attf-class="mx-3 text-center"
                 t-if="env.user.has_group('mblz_mueve.mueve_group_stock_analista_inventario')">
