<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!--        MENUS-->
        <record id="stock.menu_stock_root" model="ir.ui.menu">
            <field name="groups_id" eval="[(4, ref('mblz_mueve.mueve_group_stock_analista_inventario'))]"/>
        </record>

        <record id="stock.menu_warehouse_config" model="ir.ui.menu">
            <field name="groups_id" eval="[(4, ref('mblz_mueve.mueve_group_stock_analista_inventario'))]"/>
        </record>

        <record id="stock.menu_warehouse_report" model="ir.ui.menu">
            <field name="groups_id"
                   eval="[(4, ref('mblz_mueve.mueve_group_stock_analista_inventario')),
                          (4, ref('mblz_mueve.mueve_group_stock_auxillar_almacen'))]"/>
        </record>

        <record id="stock_account.menu_valuation" model="ir.ui.menu">
            <field name="groups_id"
                   eval="[(4, ref('mblz_mueve.mueve_group_stock_analista_inventario')),
                          (4, ref('stock.group_stock_manager'))]"/>
        </record>

        <record id="stock.menu_stock_general_settings" model="ir.ui.menu">
            <field name="groups_id"
                   eval="[(6,0 ,[ref('mblz_mueve.mueve_group_stock_analista_inventario'),
                                 ref('stock.group_stock_manager')])]"/>
        </record>


        <record id="stock.all_picking" model="ir.ui.menu">
            <field name="groups_id" eval="[
                (4, ref('mblz_mueve.mueve_group_stock_analista_inventario')),
            ]"/>
        </record>

        <record id="stock.menu_warehouse_config" model="ir.ui.menu">
            <field name="groups_id"
                   eval="[(4, ref('mblz_mueve.mueve_group_stock_analista_inventario')),
                          (4, ref('mblz_mueve.mueve_group_stock_auxillar_almacen'))]"/>
        </record>

        <record id="stock.menu_reordering_rules_config" model="ir.ui.menu">
            <field name="groups_id"
                   eval="[(6,0 ,[ref('mblz_mueve.mueve_group_stock_analista_inventario'),
                                 ref('stock.group_stock_manager')])]"/>
        </record>


        <!-- Auxillar de almacÃ©n-->
        <record id="stock.menu_stock_root" model="ir.ui.menu">
            <field name="groups_id" eval="[(4, ref('mblz_mueve.mueve_group_stock_auxillar_almacen'))]"/>
        </record>

        <record id="stock.menu_stock_config_settings" model="ir.ui.menu">
            <field name="groups_id" eval="[
            (4, ref('mblz_mueve.mueve_group_stock_analista_inventario')),
            (4, ref('mblz_mueve.mueve_group_stock_auxillar_almacen')) ]"
            />
        </record>

        <record id="stock.menu_reordering_rules_replenish" model="ir.ui.menu">
            <field name="groups_id" eval="[(4, ref('mblz_mueve.mueve_group_stock_auxillar_almacen'))]"/>
        </record>

        <!-- Menu operaciones/ Ejecutar planificador-->
        <record id="stock.menu_procurement_compute" model="ir.ui.menu">
            <field name="groups_id"
                   eval="[ (4, ref('stock.group_stock_manager')),(4, ref('mblz_mueve.mueve_group_stock_analista_inventario'))]"/>
        </record>

        <!-- Menu Informes/ Analisis de almacen-->
        <record id="stock_enterprise.stock_dashboard_menuitem" model="ir.ui.menu">
            <field name="groups_id" eval="[(4, ref('stock.group_stock_manager')),
                                           (4, ref('mblz_mueve.mueve_group_stock_analista_inventario')),
                                           (4, ref('mblz_mueve.mueve_group_stock_auxillar_almacen')),
                                           ]"/>
        </record>

        <!--Menu Informes/ Movimentos de stock-->
        <record id="stock.stock_move_menu" model="ir.ui.menu">
            <field name="groups_id" eval="[
            (4, ref('mblz_mueve.mueve_group_stock_analista_inventario')),
            (4, ref('mblz_mueve.mueve_group_stock_auxillar_almacen')),
            ]"/>
        </record>

        <!-- Menu Operaciones/Ajustes de Inventario-->
        <record id="stock.menu_action_inventory_form" model="ir.ui.menu">
            <field name="groups_id" eval="[(4, ref('stock.group_stock_manager'))]"/>
        </record>

        <!--Menu Configuracion/ Productos/ Nomenclatura de codigo de barras-->
        <record id="stock.menu_wms_barcode_nomenclature_all" model="ir.ui.menu">
            <field name="groups_id" eval="[
            (4, ref('mblz_mueve.mueve_group_stock_auxillar_almacen')),
            ]"/>
        </record>

        <!--OTRAS VISTAS-->

        <!-- Inherit Form View to Modify it -->
        <record id="mueve_product_product_view_form_easy_inherit_stock" model="ir.ui.view">
            <field name="name">MUEVE: product.product.view.form.easy.inherit.stock</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="stock.product_product_view_form_easy_inherit_stock"/>
            <field name="arch" type="xml">

                <xpath expr="//button[@name='action_update_quantity_on_hand']" position="attributes">
                    <!--                    <attribute name="groups">mblz_mueve.mueve_group_stock_analista_inventario</attribute>-->
                    <attribute name="invisible">1</attribute>
                </xpath>

            </field>
        </record>


        <record model="ir.ui.view" id="mueve_product_form_view_procurement_button">
            <field name="name">MUEVE: product.product.procurement</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="stock.product_form_view_procurement_button"/>
            <field name="arch" type="xml">

                <xpath expr="//button[@name='action_update_quantity_on_hand']" position="attributes">
                    <!--                    <attribute name="groups">mblz_mueve.mueve_group_stock_analista_inventario</attribute>-->
                    <attribute name="invisible">1</attribute>

                </xpath>

            </field>
        </record>

        <record model="ir.ui.view" id="mueve_product_template_form_view_procurement_button">
            <field name="name">MUEVE: product.product.procurement</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="stock.product_form_view_procurement_button"/>
            <field name="arch" type="xml">

                <xpath expr="//button[@name='action_update_quantity_on_hand']" position="attributes">
                    <!--                    <attribute name="groups">mblz_mueve.mueve_group_stock_analista_inventario</attribute>-->
                    <attribute name="invisible">1</attribute>

                </xpath>

            </field>
        </record>

        <record model="ir.ui.view" id="mueve_product_template_form_view_procurement_button">
            <field name="name">product.template_procurement</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="stock.product_template_form_view_procurement_button"/>
            <field name="arch" type="xml">

                <xpath expr="//button[@name='action_update_quantity_on_hand']" position="attributes">
                    <!--                    <attribute name="groups">mblz_mueve.mueve_group_stock_analista_inventario</attribute>-->
                    <attribute name="invisible">1</attribute>

                </xpath>

            </field>
        </record>

        <!-- Inherit Form View to Modify it -->
        <record id="mueve_view_inventory_form" model="ir.ui.view">
            <field name="name">MUEVE: stock.inventory.form</field>
            <field name="model">stock.inventory</field>
            <field name="inherit_id" ref="stock.view_inventory_form"/>
            <field name="arch" type="xml">

                <xpath expr="//button[@name='action_validate'][1]" position="attributes">
                    <attribute name="groups">mblz_mueve.mueve_group_stock_analista_inventario</attribute>
                </xpath>

                <xpath expr="//button[@name='action_validate'][2]" position="attributes">
                    <attribute name="groups">mblz_mueve.mueve_group_stock_analista_inventario</attribute>
                </xpath>

            </field>
        </record>

        <!-- Inherit Form View to Modify it -->
        <record id="mueve_view_picking_form" model="ir.ui.view">
            <field name="name">MUEVE: stock.picking.form</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">

                <xpath expr="//button[@name='action_toggle_is_locked'][1]" position="attributes">
                    <attribute name="groups">mblz_mueve.mueve_group_stock_analista_inventario</attribute>
                </xpath>

                <xpath expr="//button[@name='action_toggle_is_locked'][2]" position="attributes">
                    <attribute name="groups">mblz_mueve.mueve_group_stock_analista_inventario</attribute>
                </xpath>

            </field>
        </record>

        <!-- Inherit Form View to Modify it -->
        <record id="mueve_product_template_form_view" model="ir.ui.view">
            <field name="name">MUEVE: product.template.common.form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">

                <xpath expr="//label[@for='list_price']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>

                <xpath expr="//div[@name='pricing']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>

            </field>
        </record>


        <!-- Inherit Form View to Modify it -->
        <record id="mueve_product_template_kanban_view" model="ir.ui.view">
            <field name="name">MUEVE: Product.template.product.kanban</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_kanban_view"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='product_lst_price']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>

            </field>
        </record>


        <!-- Inherit Form View to Modify it -->
        <record id="mueve_view_category_property_form" model="ir.ui.view">
            <field name="name">MUEVE: product.category.stock.property.form.inherit</field>
            <field name="model">product.category</field>
            <field name="inherit_id" ref="stock_account.view_category_property_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='property_valuation']" position="attributes">
                    <attribute name="groups">mblz_mueve.mueve_group_stock_analista_inventario</attribute>
                </xpath>

            </field>
        </record>

        <record id="stock.stock_location_view_tree2_editable" model="ir.ui.view">
            <field name="arch" type="xml">
                <xpath expr="//tree" position="attributes">
                    <attribute name="create"></attribute>
                </xpath>
            </field>
        </record>

    </data>
</odoo>