<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Inherit Form View to Modify it -->
        <record id="mblz_helpdesk_ticket_type_view_tree" model="ir.ui.view">
            <field name="name">MBLZ: helpdesk.ticket.type.tree</field>
            <field name="model">helpdesk.ticket.type</field>
            <field name="inherit_id" ref="helpdesk.helpdesk_ticket_type_view_tree"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='name']" position="after">
                    <field name="priority" widget="selection" optional="hide"/>
                </xpath>

            </field>
        </record>


        <menuitem id="categotization_tkt_menu_categ"
                  name="Categorización"
                  parent="helpdesk.helpdesk_menu_config"
                  sequence="100"/>

        <!-- ELEMENTOS INICIO -->
        <record id="helpdesk_categ_element_form_view" model="ir.ui.view">
            <field name="name">helpdesk_categ_element.form</field>
            <field name="model">helpdesk.categ.element</field>
            <field name="arch" type="xml">
                <form string="Elementos de Categorización">
                    <sheet>
                        <div class="oe_title">
                            <label for="name"/>
                            <h1>
                                <field name="name" placeholder="Nombre"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="code"/>
                                <field name="system_id"/>
                            </group>
                            <group>
                                <field name="categ_ids" widget="many2many_tags"/>
                                <field name="maker"/>
                                <field name="freq_maker"/>
                                <field name="operator"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="helpdesk_categ_element_tree_view" model="ir.ui.view">
            <field name="name">helpdesk_categ_element.tree</field>
            <field name="model">helpdesk.categ.element</field>
            <field name="arch" type="xml">
                <tree string="Elementos de Categorización">
                    <field name="code"/>
                    <field name="name"/>
                    <field name="system_id"/>
                    <field name="categ_ids" widget="many2many_tags"/>
                    <field name="maker" optional="hide"/>
                    <field name="freq_maker" optional="hide"/>
                    <field name="operator" optional="hide"/>
                </tree>
            </field>
        </record>

        <record id="helpdesk_categ_element_search_view" model="ir.ui.view">
            <field name="name">helpdesk_categ_element.search</field>
            <field name="model">helpdesk.categ.element</field>
            <field name="arch" type="xml">
                <search string="Elementos de Categorización">
                    <group expand="1" string="Group By">
                        <filter string="Código" name="code_field" domain="[]"
                                context="{'group_by':'code'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="helpdesk_categ_element_act_window" model="ir.actions.act_window">
            <field name="name">Elementos de Categorización</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">helpdesk.categ.element</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Cree su primera Elementos de Categorización.
                </p>
            </field>
        </record>

        <menuitem name="Elementos"
                  id="helpdesk_categ_element_menu"
                  parent="categotization_tkt_menu_categ"
                  action="helpdesk_categ_element_act_window"
                  sequence="10"
        />
        <!-- ELEMENTOS FIN-->


        <!--        CATEGORIAS INICIO -->
        <record id="helpdesk_categ_category_form_view" model="ir.ui.view">
            <field name="name">helpdesk_categ_category.form</field>
            <field name="model">helpdesk.categ.category</field>
            <field name="arch" type="xml">
                <form string="Categorización">
                    <sheet>
                        <div class="oe_title">
                            <label for="name"/>
                            <h1>
                                <field name="name" placeholder="Nombre"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="code"/>
                            </group>
                        </group>

                        <notebook>
                            <page name="page_elements" string="Elementos">
                                <field
                                        name="element_ids"
                                        widget="one2many"
                                        mode="tree,form">
                                    <tree string="Element Lines"
                                          context="{'default_helpdesk_categ_id' : id}">
                                        <field name="element_id"/>
                                        <field name="code"/>
                                        <field name="system_id"/>
                                        <field name="categ_ids" widget="many2many_tags"/>
                                        <field name="maker" optional="hide"/>
                                        <field name="freq_maker" optional="hide"/>
                                        <field name="operator" optional="hide"/>
                                    </tree>
                                    <form>
                                        <group>
                                            <field name="element_id"/>
                                            <field name="code"/>
                                            <field name="system_id"/>
                                            <field name="categ_ids" widget="many2many_tags"/>
                                        </group>
                                    </form>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="helpdesk_categ_category_tree_view" model="ir.ui.view">
            <field name="name">helpdesk_categ_category.tree</field>
            <field name="model">helpdesk.categ.category</field>
            <field name="arch" type="xml">
                <tree string="Categorización">
                    <field name="code"/>
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="helpdesk_categ_category_search_view" model="ir.ui.view">
            <field name="name">helpdesk_categ_category.search</field>
            <field name="model">helpdesk.categ.category</field>
            <field name="arch" type="xml">
                <search string="Categorización">
                    <group expand="1" string="Group By">
                        <filter string="Código" name="code_field" domain="[]"
                                context="{'group_by':'code'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="helpdesk_categ_category_act_window" model="ir.actions.act_window">
            <field name="name">Categorización</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">helpdesk.categ.category</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Cree su primera Categorización.
                </p>
            </field>
        </record>


        <menuitem name="Categorías"
                  id="helpdesk_categ_category_menu"
                  parent="categotization_tkt_menu_categ"
                  action="helpdesk_categ_category_act_window"
                  sequence="20"
        />
        <!--        CATEGORIAS FIN -->
    </data>
</odoo>