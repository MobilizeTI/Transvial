<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="purchase.purchase_report" model="ir.ui.menu">
            <field name="groups_id" eval="[(4, ref('purchase.group_purchase_user'))]"/>
        </record>

        <record id="purchase.menu_purchase_config" model="ir.ui.menu">
            <field name="groups_id" eval="[(4, ref('purchase.group_purchase_user'))]"/>
        </record>

        <!-- Inherit Form View to Modify it -->
        <record id="mueve_purchase_order_form" model="ir.ui.view">
            <field name="name">MUEVE:purchase.order.form</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="before">
                    <field name="readonly_po" invisible="1"/>
                </xpath>
                <xpath expr="//form//sheet" position="before">
                    <!-- Add your fields or attributes here -->
                    <div class="alert alert-danger text-bf" role="alert"
                         attrs="{'invisible': [('readonly_po', '=', False)]}">
                        ¡No se puede modificar una orden compra después de haber hecho la recepción!
                    </div>
                </xpath>

            </field>
        </record>

    </data>
</odoo>