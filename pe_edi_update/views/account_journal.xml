<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="mblz_view_account_journal_form_inherited" model="ir.ui.view">
            <field name="name">mblz.account.journal.form.inherited</field>
            <field name="model">account.journal</field>
            <field name="inherit_id" ref="account_edi.view_account_journal_form_inherited"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='edi_format_ids']" position="after">
                    <!-- Add your fields or attributes here -->
                    <separator/>
                    <field name="l10n_latam_document_type_id" widget="selection"/>
                    <field name="edi_series_ids"
                           widget="many2many_tags"
                           domain="[('l10n_latam_document_type_id', '=', l10n_latam_document_type_id)]"
                           attrs="{'invisible': [('type','not in',['sale','purchase']),
                                                 ('l10n_latam_document_type_id', '=', False)],
                                   'required': [('type','in',['sale','purchase'])]}"
                           options="{'no_open': True, 'no_create': True}"/>
                </xpath>

            </field>
        </record>

    </data>
</odoo>