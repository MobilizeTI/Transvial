<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="mblz_edi_l10n_latam_invoice_document_view_move_form" model="ir.ui.view">
            <field name="name">MBLZ_EDI_PE: l10n_latam_invoice_document_account.move.form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="l10n_latam_invoice_document.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='l10n_latam_document_type_id']" position="after">
                    <field name="journal_edi_series_ids" widget="many2many_tags" invisible="1"/>
                    <field name="edi_series_id"
                           domain="[('l10n_latam_document_type_id', '=', l10n_latam_document_type_id), ('id', 'in', journal_edi_series_ids)]"
                           attrs="{'invisible': [('move_type','!=', 'out_invoice')],
                                   'required': [('l10n_latam_use_documents', '=', True)],
                                   'readonly': [('move_type','in',['out_invoice', 'out_refund'] ),                                                ('state', '!=', 'draft')]
                                }"
                           options="{'no_open': True, 'no_create': True, 'horizontal': true}"/>
                </xpath>
            </field>
        </record>


        <record id="view_invoice_tree_edi_invoice" model="ir.ui.view">
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_invoice_tree"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='name']" position="before">
                    <!--                    <field name="edi_type_id"/>-->
                    <field name="edi_state" optional="hide"/>
                </xpath>

            </field>
        </record>


        <record id="pe_edi_update_view_move_form" model="ir.ui.view">
            <field name="name">pe_edi_update: account.move.form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='line_ids']/tree//field[@name='analytic_tag_ids']" position="after">
                    <field name="code_book_sunat" optional="show"/>
                    <field name="voucher_entry" optional="show"/>
                    <field name="code_type_document_entry" optional="show"/>
                    <field name="serie_entry" optional="show"/>
                    <field name="document_entry" optional="show"/>
                </xpath>

            </field>
        </record>

    </data>
</odoo>