<odoo>
    <data>

        <record model="ir.ui.view" id="edi_invoice_series_form">
            <field name="name"> edi.invoice.series.form</field>
            <field name="model">edi.invoice.series</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_publish" string="Publicar" states="draft" type="object"
                                class="oe_highlight"/>
                        <button name="action_cancel" string="Inhabilitar" states="publish" type="object"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <field name="l10n_latam_document_type_id"
                                   widget="radio"
                                   class="oe_edit_only"
                                   options="{'horizontal': true}"/>
                            <h1>
                                <field name="name" placeholder="Serie comprobante. Ejem: FE01 o BE01"/>
                            </h1>
                            <field name="edi_type_code" invisible="1"></field>
                        </div>
                        <group>
                            <group string="Serie rectificativas">
                                <field name="name_nc"
                                       attrs="{'invisible': [('edi_type_code', 'not in', ('01', '03'))]}"/>
                                <field name="name_nd"
                                       attrs="{'invisible': [('edi_type_code', 'not in', ('01', '03'))]}"/>
                                <field name="company_id" readonly="1" string="Compañía"
                                       groups="base.group_multi_company"/>
                            </group>
                            <group groups="base.group_no_one">
                                <!--                                <field name="journal_id"/>-->
                                <field name="invoice_seq_id"/>
                                <field name="credit_note_seq_id"
                                       attrs="{'invisible': [('edi_type_code', 'not in', ('01', '03'))]}"/>
                                <field name="debit_note_seq_id"
                                       attrs="{'invisible': [('edi_type_code', 'not in', ('01', '03'))]}"/>
                            </group>
                            <group/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" groups="base.group_user"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- explicit list view definition -->
        <record model="ir.ui.view" id="edi_invoice_series_list">
            <field name="name">edi.invoice.series.list</field>
            <field name="model">edi.invoice.series</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="l10n_latam_document_type_id"/>
                    <field name="edi_type_code" invisible="1"/>
                    <field name="name"/>
                    <field name="name_nc"
                           attrs="{'invisible': [('edi_type_code', 'not in', ('01', '03'))]}"/>
                    <field name="name_nd"
                           attrs="{'invisible': [('edi_type_code', 'not in', ('01', '03'))]}"/>
                    <field name="company_id"
                           groups="base.group_multi_company" readonly="1" string="Compañía"/>
                </tree>
            </field>
        </record>

        <record id="edi_invoice_series_action" model="ir.actions.act_window">
            <field name="name">Series</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">edi.invoice.series</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem name="Series"
                  id="invoice_series_menu"
                  parent="pe_base.menu_pe_base_root"
                  action="edi_invoice_series_action"
                  sequence="20"
        />
    </data>
</odoo>