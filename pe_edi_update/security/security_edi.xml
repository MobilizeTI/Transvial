<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- SERIES -->
        <record model="ir.rule" id="record_edi_invoice_series_rule">
            <field name="name">Series EDI: multi-company</field>
            <field name="model_id" ref="model_edi_invoice_series"/>
            <field name="global" eval="True"/>
            <field name="domain_force">
                ['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]
            </field>
        </record>

        <!-- Company-restricted Records -->
        <record model="ir.rule" id="edi_invoice_series_company_rule">
            <field name="name">Series EDI restricted : multi-company</field>
            <field name="model_id" ref="model_edi_invoice_series"/>
            <field name="global" eval="True"/>
            <field name="domain_force">
                [('company_id', 'in', company_ids)]
            </field>
        </record>
    </data>
</odoo>