<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Inherit Form View to Modify it -->
        <record id="mblz_fleet_vehicle_custom_view_form" model="ir.ui.view">
            <field name="name">mblz.custom.fleet.vehicle.form</field>
            <field name="model">fleet.vehicle</field>
            <field name="inherit_id" ref="fleet.fleet_vehicle_view_form"/>
            <field name="arch" type="xml">

                <xpath expr="//div[@name='button_box']" position="inside">
                    <button name="open_fuel_logs"
                            type="object"
                            string="Fuel"
                            class="oe_stat_button"
                            icon="fa-flask">
<!--                        <field name="fuel_logs_count" widget="statinfo" string="Drivers History"/>-->
                    </button>
                </xpath>


            </field>
        </record>
    </data>
</odoo>