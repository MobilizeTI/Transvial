        <record id="mblz_fleet_fuel_tank_act_window" model="ir.actions.act_window">
            <field name="name">Fuel Tank</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">fuel.tank</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    There is no examples click here to add new Fuel Tank.
                </p>
            </field>
        </record>

        <menuitem name="Fuel Tank"
                  id="mblz_fleet_fuel_tank_menu"
                  parent="fleet.fleet_configuration"
                  action="mblz_fleet_fuel_tank_act_window"
                  sequence="20"/>

    </data>
