<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="mblz_fleet_vehicle_fuel_log_form_view" model="ir.ui.view">
            <field name="name">vehicle.fuel.log.form</field>
            <field name="model">vehicle.fuel.log</field>
            <field name="arch" type="xml">
                <form string="Vehicles Fuel Logs">
                    <sheet>
                        <group>
                            <group string="Vehicle Details">
                                <field name="vehicle_id"/>
                                <field name="employee_id"/>
                            </group>
                            <group string="Refueling Details">
                                <field name="liter" widget="float"/>
                                <field name="fuel_tank_id" options="{'no_create':True,'no_create_edit': True}"/>
                                <field name="price_x_liter" widget="float"/>
                                <field name="total_price" widget="float"/>
                            </group>
                        </group>


                        <group>
                            <group string="Odometer Details">
                                <label for="odometer_value"/>
                                <div>
                                    <field name="odometer_value" widget="float" class="oe_inline"/> Kilometer
                                </div>

                                <label for="previous_odometer_reading"/>
                                <div>
                                    <field name="previous_odometer_reading"
                                           readonly="1" class="oe_inline"/> Kilometer
                                </div>
                            </group>
                            <group string="Additional details">
                                <field name="date" widget="date"/>
                                <field name="invoice_reference"/>
<!--                                <field name="vendor_id"/>-->
                            </group>
                        </group>

                        <group>
                            <field name="description"
                                   placeholder="Write here any other information"
                                   nolabel="1"/>
                        </group>

                    </sheet>
                </form>
            </field>
        </record>

        <record id="mblz_fleet_vehicle_fuel_log_tree_view" model="ir.ui.view">
            <field name="name">vehicle.fuel.log.tree</field>
            <field name="model">vehicle.fuel.log</field>
            <field name="arch" type="xml">
                <tree string="Vehicles Fuel Logs">
                    <field name="date"/>
                    <field name="vehicle_id"/>
                    <field name="fuel_tank_id"/>
                    <field name="employee_id"/>
                    <field name="odometer_value"/>
                    <field name="price_x_liter"/>
                    <field name="liter"/>
                    <field name="total_price"/>
                    <field name="flag_liters_process" invisible="1"/>
                </tree>
            </field>
        </record>


        <record id="mblz_fleet_vehicle_fuel_log_search_view" model="ir.ui.view">
            <field name="name">vehicle.fuel.log.search</field>
            <field name="model">vehicle.fuel.log</field>
            <field name="arch" type="xml">
                <search string="Vehicles Fuel Logs">
                    <field name="vehicle_id"/>
                    <group expand="1" string="Group By">
                        <filter string="Vehicle" name="groupby_vehicle" context="{'group_by':'vehicle_id'}"/>

                    </group>
                </search>
            </field>
        </record>


        <record id="mblz_fleet_vehicle_fuel_log_act_window" model="ir.actions.act_window">
            <field name="name">Vehicles Fuel Logs</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">vehicle.fuel.log</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{
                'search_default_groupby_vehicle': True,
            }</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    There is no examples click here to add new Vehicles Fuel Logs.
                </p>
            </field>
        </record>

        <record id="mblz_fleet_vehicle_fuel_log2_act_window" model="ir.actions.act_window">
            <field name="name">Vehicles Fuel Logs</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">vehicle.fuel.log</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem name="Vehicles Fuel Logs"
                  id="mblz_fleet_vehicle_fuel_log_menu"
                  parent="fleet.fleet_vehicles"
                  action="mblz_fleet_vehicle_fuel_log_act_window"
                  sequence="2"/>

    </data>
</odoo>