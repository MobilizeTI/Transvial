<?xml version="1.0" encoding="utf-8" ?>

<odoo>
    <record id="hr_specialty_tag_form_view" model="ir.ui.view">
        <field name="name">hr.specialty.tag.form (in hr_specialty_tags)</field>
        <field name="model">hr.specialty.tag</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group name="info_group">
                        <field name="name"/>
                        <field name="color" widget="color_picker"/>
<!--                        <field name="color_test" widget="color"/>-->
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="hr_specialty_tag_tree_view" model="ir.ui.view">
        <field name="name">hr.specialty.tag.tree (in hr_specialty_tags)
        </field>
        <field name="model">hr.specialty.tag</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="color" widget="color_picker"/>
            </tree>
        </field>
    </record>

    <record id="hr_specialty_tag_act_window" model="ir.actions.act_window">
        <field name="name">Specialities</field>
        <field name="res_model">hr.specialty.tag</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>

    <!-- This Menu Item must have a parent and an action -->
    <menuitem id="hr_specialty_tag_menu"
              name="Specialities"
              parent="maintenance.menu_maintenance_configuration"
              action="hr_specialty_tag_act_window" sequence="1"/>
</odoo>
