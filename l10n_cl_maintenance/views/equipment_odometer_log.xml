<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>

        <record model="ir.actions.act_window" id="action_equipment_odometer_log">
            <field name="name">Equipment Odometer Log</field>
            <field name="res_model">equipment.odometer.log</field>
            <field name="view_mode">tree</field>
        </record>

        <record model="ir.ui.view" id="equipment_odometer_log_view_tree">
            <field name="name">price.log.view.tree</field>
            <field name="model">equipment.odometer.log</field>
            <field name="arch" type="xml">
                <tree import="0" editable="top"
                      decoration-muted="flag_process == True"
                      default_order="date_log desc">
                    <field name="flag_process" invisible="1"/>
                    <field name="date_log" widget="date"/>
                    <field name="guideline_id"
                           options="{'no_create': True, 'no_create_edit': True, 'no_open': False}"
                           domain="[('flag_create_auto', '=', True)]"/>
                    <field name="type_auto_planning"/>
                    <field name="equipment_id"/>
                    <field name="vehicle_id"/>
                    <field name="odometer"/>
                    <field name="last_odometer" options='{"bg_color": "#bff6dc"}'/>
                    <field name="next_odometer"
                           attrs="{'readonly': [('type_auto_planning', '=', 'latest')]}"
                           options='{"bg_color": "#bff6dc"}'/>
                    <field name="odometer_unit" string="UoM"/>
                </tree>
            </field>
        </record>

        <!-- This Menu Item must have a parent and an action -->
        <menuitem id="equipment_odometer_log_menu"
                  name="Odometer Logs"
                  parent="maintenance.menu_equipment_form"
                  action="action_equipment_odometer_log"
                  sequence="100"
                  groups="base.group_user,l10n_cl_maintenance.group_admin_log_guideline_odometer"
        />

    </data>
</odoo>
