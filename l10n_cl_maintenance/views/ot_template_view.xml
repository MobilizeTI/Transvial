<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="ot_template_form_view" model="ir.ui.view">
            <field name="name">ot.template.form</field>
            <field name="model">ot.template</field>
            <field name="arch" type="xml">
                <form string="OT Template">
                    <sheet>
                        <div class="oe_title">
                            <label for="name_header"/>
                            <h1>
                                <field name="name_header" placeholder="Name header"/>
                            </h1>
                        </div>
                        <group>
                            <group>
<!--                                <field name="guideline_id"-->
<!--                                       options="{'no_open': False, 'no_create': True, 'no_create_edit': True}"/>-->
                                <field name="type_ot"
                                       options="{'no_open': False, 'no_create': True, 'no_create_edit': True}"/>
                            </group>
                            <group>
                                <field name="user_id" widget="many2one_avatar_user"/>
                                <field name="employee_id"
                                       widget="many2one_avatar_employee"
                                       options="{'no_open': False, 'no_create': True, 'no_create_edit': True}"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="ot_template_tree_view" model="ir.ui.view">
            <field name="name">ot.template.tree</field>
            <field name="model">ot.template</field>
            <field name="arch" type="xml">
                <tree string="OT Template">
                    <field name="name_header"/>
<!--                    <field name="guideline_id"/>-->
                    <field name="type_ot"/>
                    <field name="employee_id" widget="many2one_avatar_employee"/>
                    <field name="user_id" widget="many2one_avatar_user"/>
                </tree>
            </field>
        </record>


        <record id="ot_template_act_window" model="ir.actions.act_window">
            <field name="name">OT Templates</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">ot.template</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    There is no examples click here to add new OT Template.
                </p>
            </field>
        </record>

        <menuitem name="Templates OT"
                  id="ot_template_menu"
                  parent="maintenance.menu_equipment_form"
                  action="ot_template_act_window" sequence="90"/>

    </data>
</odoo>