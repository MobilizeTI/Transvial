        <record id="maintenance_motive_stage_tree_view" model="ir.ui.view">
            <field name="name">maintenance.motive.stage.tree</field>
            <field name="model">maintenance.motive.stage</field>
            <field name="arch" type="xml">
                <tree string="Motives" editable="top">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>

        <record id="maintenance_motive_stage_search_view" model="ir.ui.view">
            <field name="name">maintenance.motive.stage.search</field>
            <field name="model">maintenance.motive.stage</field>
            <field name="arch" type="xml">
                <search string="Motives">
                    <field name="name"/>
                </search>
            </field>
        </record>

        <record id="maintenance_motive_stage_act_window" model="ir.actions.act_window">
            <field name="name">Motives</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">maintenance.motive.stage</field>
            <field name="view_mode">tree</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    There is no examples click here to add new Motives.
                </p>
            </field>
        </record>

        <menuitem name="Motives"
                  id="maintenance_motive_stage_menu"
                  parent="maintenance.menu_maintenance_configuration"
                  action="maintenance_motive_stage_act_window"
