<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="guideline_activity_form_view" model="ir.ui.view">
            <field name="name">l10n_cl_maintenance.guideline_activity.form</field>
            <field name="model">guideline.activity</field>
            <field name="arch" type="xml">
                <form string="guideline activity">
                    <sheet>
                        <widget name="web_ribbon" title="Archived" bg_color="bg-danger"
                                attrs="{'invisible': [('active', '=', True)]}"/>

                        <div class="oe_button_box" name="button_box">
                            <button
                                    name="preview_child_list"
                                    type="object"
                                    class="oe_stat_button"
                                    icon="fa-sitemap"
                            >
                                <field string="Children" name="child_count" widget="statinfo"/>
                            </button>
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Name..."/>
                            </h1>
                        </div>
                        <div>
                            <label for="specialty_tag_ids" string="Specialities"/>
                            <field
                                    name="specialty_tag_ids"
                                    required="1"
                                    widget="many2many_tags"
                                    options="{'color_field': 'color'}"
                                    placeholder="e.g. Mechanic"
                            />

                        </div>

                        <group name="first" col="2">
                            <field name="active" invisible="1"/>
                            <field
                                    name="parent_id"
                                    readonly="not context.get('parent_id_editable', True)"
                            />
                        </group>
                        <group>
                            <group>
                                <field name="code"/>
                                <label for="duration"/>
                                <div>
                                    <field name="duration"
                                           widget="float_time"
                                           class="oe_inline"/> <span class="ml8">hours</span>
                                </div>
                            </group>
                            <group>
                                <field name="system_class_id"
                                       options="{'no_open': False, 'no_create': True, 'no_create_edit': True}"/>

                                <field name="complete_name" invisible="1"/>
<!--                                <field name="parent_path_ids" invisible="1"/>-->
                            </group>
                        </group>


                        <notebook>
                            <page name="description_page" string="Description">
                                <field name="description" type="html"/>
                                <div class="d-none oe_clear"/>
                            </page>
                            <page name="urls" string="Links">
                                <field
                                        name="url_ids"
                                        widget="section_and_note_one2many"
                                        context="{'default_activity_id' : id}"
                                        mode="tree,form">

                                    <tree string="Activies Lines"
                                          editable="bottom">
                                        <field name="name" widget="url"/>
                                        <field name="description"/>
                                    </tree>
                                </field>
                            </page>

                            <page name="files" string="Files">
                                <group>
                                    <field name="att_documents" widget="many2many_binary"/>
                                </group>
                            </page>

                            <page name="childs" string="Child's" invisible="1">
                                <field
                                        name="child_ids"
                                        widget="section_and_note_one2many"
                                        context="{'default_activity_id' : id}"
                                        mode="tree,form">

                                    <tree string="Activity Child's"
                                          editable="bottom">
                                        <field name="name"/>
                                        <field name="code"/>
                                    </tree>
                                </field>
                            </page>


                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="guideline_activity_tree_view" model="ir.ui.view">
            <field name="name">l10n_cl_maintenance.guideline_activity.tree</field>
            <field name="model">guideline.activity</field>
            <field name="arch" type="xml">
                <tree string="guideline activity">
                    <field name="sequence" widget="handle"/>
                    <field name="code"/>
                    <field name="complete_name"/>
                    <field name="url_video" invisible="1"/>
                    <button name="action_open_url_video"
                            attrs="{'invisible': [('url_video', '=', False)]}"
                            icon="fa-link"
                            type="object"/>
                    <field
                            name="specialty_tag_ids"
                            widget="many2many_tags"
                            options="{'color_field': 'color'}"
                    />
                </tree>
            </field>
        </record>


        <record id="guideline_activity_search_view" model="ir.ui.view">
            <field name="name">l10n_cl_maintenance.guideline_activity.search</field>
            <field name="model">guideline.activity</field>
            <field name="arch" type="xml">
                <search string="guideline activity">
                    <field name="code"/>
                    <field name="name"/>
                    <field name="active"/>
                    <field name="specialty_tag_ids"/>
                    <group expand="1" string="Group By">
                        <filter string="Code" name="code" domain="[]"/>
                        <filter string="Name" name="name"/>
                        <filter string="Archived" name="inactive" domain="[('active','=',False)]"/>
                    </group>
                </search>
            </field>
        </record>

