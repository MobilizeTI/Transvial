<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="maintenance_system_classification_form_view" model="ir.ui.view">
            <field name="name">maintenance_system_classification.form</field>
            <field name="model">maintenance.system.classification</field>
            <field name="arch" type="xml">
                <form string="maintenance_system_classification">
                    <sheet>
                        <widget name="web_ribbon" title="Archived" bg_color="bg-danger"
                                attrs="{'invisible': [('active', '=', True)]}"/>

                        <div class="oe_button_box" name="button_box">
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Name..."/>
                            </h1>
                        </div>
                        <div>
                            <label for="parent_ids" string="Systems"/>
                            <field
                                    name="parent_ids"
                                    required="1"
                                    widget="many2many_tags"
                            />

                        </div>
                        <group>
                            <group>
                                <field name="active" invisible="1"/>
                                <field name="code"/>
                            </group>
                            <group>
                                <field name="allocation_level" widget="boolean_toggle"/>
                                <field name="is_critical" widget="boolean_toggle"/>
                            </group>
                        </group>


                        <notebook>
                            <page name="description_page" string="Description">
                                <field name="description" type="html"/>
                                <div class="d-none oe_clear"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="maintenance_system_classification_tree_view" model="ir.ui.view">
            <field name="name">maintenance_system_classification.tree</field>
            <field name="model">maintenance.system.classification</field>
            <field name="arch" type="xml">
                <tree string="maintenance_system_classification">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="code"/>
                    <field
                            name="parent_ids"
                            required="1"
                            widget="many2many_tags"
                    />
                    <field name="allocation_level" widget="boolean"/>
                </tree>
            </field>
        </record>


        <record id="maintenance_system_classification_search_view" model="ir.ui.view">
            <field name="name">maintenance_system_classification.search</field>
            <field name="model">maintenance.system.classification</field>
            <field name="arch" type="xml">
                <search string="maintenance_system_classification">
                    <field name="code"/>
                    <field name="name"/>
                    <field name="active"/>
                    <group expand="1" string="Group By">
                        <filter string="Code" name="code" domain="[]"/>
                        <filter string="Name" name="name"/>
                        <filter string="Archived" name="inactive" domain="[('active','=',False)]"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="maintenance_system_classification_act_window" model="ir.actions.act_window">
            <field name="name">System and Classification</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">maintenance.system.classification</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    There is no system classification click here to add new.
                </p>
            </field>
        </record>


    </data>
</odoo>