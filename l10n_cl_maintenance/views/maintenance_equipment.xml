    <!-- equipment : views -->
    <record id="hr_equipment_view_search" model="ir.ui.view">
        <field name="name">equipment.search</field>
        <field name="model">maintenance.equipment</field>
        <field name="inherit_id" ref="maintenance.hr_equipment_view_search"/>
        <field name="arch" type="xml">
            <field name="category_id" position="after">
                <field string="Activity" name="equipment_activity_id"/>
            </field>
        </field>
    </record>

    <record id="mblz_hr_equipment_view_tree" model="ir.ui.view">
        <field name="name">MBLZ: equipment.tree</field>
        <field name="model">maintenance.equipment</field>
        <field name="inherit_id" ref="maintenance.hr_equipment_view_tree"/>
        <field name="arch" type="xml">

            <xpath expr="//tree[1]" position="attributes">
                <attribute name="default_order">name asc</attribute>
            </xpath>

        </field>
    </record>

    <record id="mueve_hr_equipment_view_kanban" model="ir.ui.view">
        <field name="name">MUEVE: equipment.kanban</field>
        <field name="model">maintenance.equipment</field>
        <field name="inherit_id" ref="maintenance.hr_equipment_view_kanban"/>
        <field name="arch" type="xml">

            <xpath expr="//kanban[1]" position="attributes">
                <attribute name="default_order">name asc</attribute>
            </xpath>

        </field>
    </record>

    <record id="mblz_hr_equipment_view_form" model="ir.ui.view">
        <field name="name">equipment.form</field>
        <field name="model">maintenance.equipment</field>
        <field name="inherit_id" ref="maintenance.hr_equipment_view_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='maintenance_count']" position="before">
                <field name="flag_reload_maintenance_count" invisible="1"/>
            </xpath>

            <label for="period" position="attributes">
                <attribute name="invisible">1</attribute>
            </label>
            <xpath expr="//field[@name='period']/.." position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <label for="maintenance_duration" position="attributes">
                <attribute name="invisible">1</attribute>
            </label>
            <xpath expr="//field[@name='maintenance_duration']/.." position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

            <xpath expr="//form/sheet/notebook" position="inside">
                <page name="guideline_maintenances" string="Guideline Of Maintenances">
                    <group>
                        <field name="maintenance_guideline_ids" widget="many2many_tags" nolabel="1"/>
                    </group>
                </page>
            </xpath>


            <xpath expr="//field[@name='employee_id']" position="after">
                <field name="vehicle_id"
                       class="text-primary"
                       options="{'no_open': False, 'no_create': True}"/>

                <field name="vehicle_type" invisible="1"/>
                <label for="odometer" attrs="{'invisible': [('vehicle_type', '!=', 'car')]}"/>
                <div class="o_row" attrs="{'invisible': [('vehicle_type', '!=', 'car')]}">
                    <field name="odometer"/>
                    <field name="odometer_unit"/>
                </div>
                <field name="odometer_count" invisible="1"/>
            </xpath>

            <div name="button_box" position="inside">
                <button class="oe_stat_button"
                        type="action"
                        name="%(maintenance_equipment_activity_tracking_action)d"
                        context="{'search_default_equipment_id': active_id, 'default_equipment_id': active_id}"
                        icon="fa-clock-o">
                    <field string="Tracking"
                           name="maintenance_actv_tracking_count" widget="statinfo"/>
                </button>

                <button name="return_action_to_open"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-tachometer"
                        string="Odometer"
                        help="show the odometer logs for this vehicle"
                        attrs="{'invisible': [('vehicle_type', '!=', 'car')]}">
                    <field string="Odometer" name="odometer_count" widget="statinfo"/>
                </button>


                <xpath expr="//field[@name='active']" position="before">
                    <field name="is_reiterative" readonly="1" groups="base.group_no_one"/>
                </xpath>

            </div>

        </field>
    </record>


    <!-- equipment activity : views -->
    <record id="maintenance_equipment_activity_view_form" model="ir.ui.view">
        <field name="name">maintenance.equipment.activity.form</field>
        <field name="model">maintenance.equipment.activity</field>
        <field name="arch" type="xml">
            <form string="Equipment Activity">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="%(hr_equipment_action_from_activity_form)d"
                                class="oe_stat_button"
                                icon="fa-cubes"
                                type="action">
                            <field string="Equipment" name="equipment_count" widget="statinfo"/>
                        </button>
                        <button name="%(hr_equipment_request_action_link_from_activity_form)d"
                                type="action"
                                class="oe_stat_button"
                                icon="fa-wrench">
                            <field string="Maintenance" name="maintenance_count" widget="statinfo"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only" string="Activity Name"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <field name="uom_id" class="oe_inline"/>
                        <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}"
                               class="oe_inline"/>
                    </group>
                </sheet>
                <!--                <div class="oe_chatter">-->
                <!--                    <field name="message_follower_ids" widget="mail_followers"/>-->
                <!--                    <field name="message_ids" widget="mail_thread"/>-->
                <!--                </div>-->
            </form>
        </field>
    </record>


</odoo>