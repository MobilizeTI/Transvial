<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="maintenance_request_cron" forcecreate='True' model="ir.cron">
            <field name="name">Run Scheduler OT</field>
            <field eval="False" name="active"/>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="model_id" ref="model_maintenance_request"/>
            <field name="state">code</field>
            <field name="code">model.run_scheduler()</field>
        </record>


        <record id="refresh_close_filter_cron" forcecreate='True' model="ir.cron">
            <field name="name">Refresh closed OT filter</field>
            <field eval="True" name="active"/>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="model_id" ref="model_maintenance_request"/>
            <field name="state">code</field>
            <field name="code">model.refresh_filter_close_days()</field>
        </record>


        <record id="activities_reiteratives_cron" forcecreate='True' model="ir.cron">
            <field name="name">Clear alert activities reiteratives</field>
            <field eval="True" name="active"/>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="model_id" ref="model_maintenance_request"/>
            <field name="state">code</field>
            <field name="code">model.clear_activities_reiteratives()</field>
        </record>

    </data>
</odoo>