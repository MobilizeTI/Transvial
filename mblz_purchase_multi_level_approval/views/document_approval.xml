<odoo>
    <data>
        <!-- explicit list view definition -->
        <record id="document_approval_view_form" model="ir.ui.view">
            <field name="name">document_approval_view_form</field>
            <field name="model">document.approval</field>
            <field name="arch" type="xml">
                <form string="document_approval_form">
                    <sheet>
                        <group>
                            <div class="oe_title">
                                <label for="name" class="oe_edit_only"/>
                                <h1>
                                    <field name="name" placeholder="Name document......"/>
                                </h1>
                            </div>
                        </group>

                        <group>
                            <field name="user_admin_ids" widget="many2many_tags"
                                   options="{'no_create': True, 'no_create_edit': True, 'no_open': False}"/>
                        </group>

                        <notebook>
                            <page name="document_approval_lines" string="Lines">
                                <field name="doc_approval_ids"
                                       widget="section_and_note_one2many" mode="tree, form">
                                    <tree string="Document Approval Lines" editable="bottom">
                                        <field name="sequence" widget="handle"/>
                                        <field name="level" options='{"bg_color": "#f5f6fa"}'
                                               class="text-black-75 text-bf"/>
                                        <field name="amount" widget="float"/>
                                        <field name="user_ids" widget="many2many_tags"
                                               domain="[('id' ,'not in', parent.user_admin_ids), ('flag_approve_po', '=', True)]"
                                               options="{'no_create': True, 'no_create_edit': True, 'no_open': False}"/>
                                        <field name="description" optional="show"/>
                                    </tree>
                                    <form>
                                        <group>
                                            <group>
                                                <field name="level" options='{"bg_color": "#f5f6fa"}'
                                                       class="text-black-75 text-bf"/>
                                                <field name="amount" widget="float"/>
                                            </group>
                                            <group>
                                                <field name="user_ids" widget="many2many_tags"
                                                       options="{'no_create': True, 'no_create_edit': True, 'no_open': False}"/>
                                                <field name="description"/>
                                            </group>

                                        </group>
                                    </form>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="document_approval_view_tree" model="ir.ui.view">
            <field name="name">document_approval_view_tree</field>
            <field name="model">document.approval</field>
            <field name="arch" type="xml">
                <tree string="document_approval_tree">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="document_approval_action" model="ir.actions.act_window">
            <field name="name">Document approval</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">document.approval</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- This Menu Item must have a parent and an action -->
        <menuitem id="menu_document_approval"
                  name="Document approval"
                  parent="purchase.menu_purchase_config"
                  action="document_approval_action"
                  sequence="100"/>

    </data>
</odoo>