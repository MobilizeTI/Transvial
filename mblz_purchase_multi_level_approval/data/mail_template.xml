<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">

        <record id="email_approve_template_edi_purchase" model="mail.template">
            <field name="name">Approve Purchase Order: Send RFQ</field>
            <field name="model_id" ref="purchase.model_purchase_order"/>
            <field name="subject">${object.company_id.name} Order (Ref ${object.name or 'n/a' })</field>
            <field name="partner_to">${ctx.get('partner_to')}</field>
<!--            <field name="email_to">${object.user_id.email}</field>-->
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        Dear ${ctx.get('user_name')}
                        <br/>
                        <br/>
                        Here is in attachment a request for quotation
                        <strong>${object.name}</strong>
                        % if object.partner_ref:
                        with reference: ${object.partner_ref}
                        % endif
                        from ${object.company_id.name} for your approval.
                        <br/>
                        <br/>
                        Best regards,
                    </p>
                </div>
            </field>
            <field name="report_template" ref="purchase.action_report_purchase_order"/>
            <field name="report_name">PO_${(object.name or '').replace('/','_')}</field>
            <field name="lang">${object.partner_id.lang}</field>
            <field name="auto_delete" eval="True"/>
        </record>

    </data>
</odoo>