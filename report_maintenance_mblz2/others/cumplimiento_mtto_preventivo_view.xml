<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--reportes 26, 27 y 41-->
    <record id="cumplimientom_tto_preventivo_search" model="ir.ui.view"> 
        <field name="name">Búsqueda Cumplimiento de mantenimientos preventivos y correctivos</field>
        <field name="model">cumplimiento.mtto.preventivo.details</field>
        <field name="arch" type="xml"> 
            <search> 
                <field name="name_seq"/>
                <field name="maintenance_id"/>
                <field name="license_plate"/>
                <filter string="Tipo de OT: Alistamiento" name="type_ot" domain="[('type_ot','in', (30,37))]"/>
                <filter name="preventivos" string="Tipo de mantenimiento: Preventivo" domain="[('preventivos', '!=', False)]"/>
                <filter name="correctivos" string="Tipo de mantenimiento: Correctivo" domain="[('correctivos', '!=', False)]"/>
                <filter name="ejecutados" string="Mtto Ejecutados" domain="[('stage_id', '=',9)]"/>
                <separator/>
                <filter string="Mtto Sin Ejecutar" name="por_vencer" domain="[('stage_id', 'in',(2,1))]" help="Por Ejecutar"/>
                <separator/>
                <filter name="filter_date" date="execution_date" default_period="this_month"/>
                <filter string="Transacciones del día" name="dia" domain="[('execution_date','&gt;=', datetime.datetime.combine(context_today(), datetime.time(0,0,0))), ('execution_date','&lt;=', datetime.datetime.combine(context_today(), datetime.time(23,59,59)))]" help="Transacciones del día"/>
                <group expand="1" string="Group By">
                    <filter string="Tipos de mantenimiento" name="maintenance_type" context="{'group_by':'maintenance_type'}"/>
                    <filter string="Equipos" name="equipment_id" context="{'group_by':'equipment_id'}"/>
                </group>
            </search> 
        </field>
    </record>

    <record id='cumplimientom_tto_preventivo_action' model='ir.actions.act_window'>
        <field name="name">Cumplimiento de mantenimientos preventivos y correctivos</field>
        <field name="res_model">cumplimiento.mtto.preventivo.details</field>
        <field name="view_mode">tree,graph,pivot,dashboard</field>
        <field name="context">{"search_default_preventivos":"preventive"}</field>
    </record>

<!--    <menuitem name="Cumplimiento de mantenimientos preventivos y correctivos" id="cumplimientom_tto_preventivo_menu" parent="maintenance.maintenance_reporting" action="cumplimientom_tto_preventivo_action"/>-->

    <record id="cumplimientom_tto_preventivo_tree" model="ir.ui.view" > 
        <field name="name">Cumplimiento de mantenimientos preventivos y correctivos</field>
        <field name="model">cumplimiento.mtto.preventivo.details</field>
        <field name="arch" type="xml"> 
            <tree create="0" edit="0">
                <!-- <field name="nbr"/> -->
                <field name="name_seq" optional="show" options="{'no_open': True, 'no_create_edit': True}"/>
                <field name="maintenance_id" optional="show" options="{'no_open': True, 'no_create': True}"/>
                <field name="type_ot" optional="show" options="{'no_open': True, 'no_create': True}"/>
                <field name="stage_id" optional="show" options="{'no_open': True, 'no_create': True}"/>
                <field name="maintenance_type_view" optional="show" options="{'no_open': True, 'no_create': True}"/>
                <field name="equipment_id" optional="show" options="{'no_open': True, 'no_create': True}"/>
                <field name="license_plate" optional="show" options="{'no_open': True, 'no_create': True}"/>
                <field name="model_id" optional="show" options="{'no_open': True, 'no_create': True}"/>
                <field name="category_id" optional="show" options="{'no_open': True, 'no_create': True}"/>
                <field name="odometer_actual" optional="show" options="{'no_open': True, 'no_create': True}"/>
                <field name="request_date" optional="show" options="{'no_open': True, 'no_create': True}"/>
                <field name="schedule_date" optional="show" options="{'no_open': True, 'no_create': True}"/>
                <field name="execution_date" optional="show" options="{'no_open': True, 'no_create': True}"/>
                <field name="company_id" optional="show" options="{'no_open': True, 'no_create': True}"/>
            </tree> 
        </field>
    </record>

    <record id="cumplimientom_tto_preventivo_graph" model="ir.ui.view">
        <field name="model">cumplimiento.mtto.preventivo.details</field>
        <field name="arch" type="xml">
            <graph type="bar">
                <field name="cumplio"/>
            </graph>
        </field>
    </record>

    <record id="cumplimientom_tto_preventivo_pivot" model="ir.ui.view">
        <field name="model">cumplimiento.mtto.preventivo.details</field>
        <field name="arch" type="xml">
            <pivot>
                <field name="cumplio" type="row"/>
                <field name="equipment_id" type="row"/>
            </pivot>
        </field>
    </record>

    <record id="cumplimientom_tto_preventivo_dashboard" model="ir.ui.view">
        <field name="name">maintenance.request.view.dashboard</field>
        <field name="model">cumplimiento.mtto.preventivo.details</field>
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <dashboard>
                <view type="graph" ref="report_maintenance_mblz2.cumplimientom_tto_preventivo_graph"/>
                <group>
                    <group col="3">
                        <widget name="pie_chart" title="Estatus de Mantenimientos" attrs="{'groupby': 'cumplio'}"/>
                    </group>
                    <group col="9">
                        
                        <aggregate name="total_programados" string="# Total de Mantenimientos programados" group_operator="count" field="maintenance_id" measure="__count__"/>
                        <aggregate name="total" string="# Total de Mantenimientos ejecutados" domain="[('stage_id', '=',9)]" group_operator="count" field="maintenance_id" measure="__count__"/>
                        <aggregate name="cumplio" string="# Ejecutadas en fecha programada" domain="[('stage_id', '=',9),('cumplio', '=','Ejecutado antes de la fecha')]" group_operator="count" field="maintenance_id" measure="__count__"/>
                        <aggregate name="no_cumplio" string="# Ejecutadas fuera de fecha programada" domain="[('stage_id', '=',9),('cumplio', '=','Ejecutado despues de la fecha')]" group_operator="count" field="maintenance_id" measure="__count__"/>
                        <formula name="porc_cumplimiento" string="Cumplimiento de OTs ejecutados" value="(record.cumplio / record.total) * 100" value_label="%"/>
                        
                        <aggregate name="total_buses" string="# Total de Buses programados" group_operator="count" field="equipment_id" measure="__count__"/>
                        <aggregate name="total_buses_eje" string="# Buses ejecutados" domain="[('stage_id', '=',9)]" group_operator="count" field="ejecutados_id" measure="__count__"/>
                        <aggregate name="total_buses_no_eje" string="# Buses sin ejecutar" domain="[('stage_id', '!=',9)]" group_operator="count" field="no_ejecutados_id" measure="__count__"/>
                        <formula name="porc_cumplimiento_buses" string="Cumplimiento de Programación de Buses" value="(record.total_buses_eje / record.total_buses) * 100" value_label="%"/>
                    </group>
                </group>
                <view type="pivot" ref="report_maintenance_mblz2.cumplimientom_tto_preventivo_pivot"/>
            </dashboard>
        </field>
    </record>
</odoo>
