<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- 24 -->
    <record id="maintenance_request_preventive_search" model="ir.ui.view"> 
        <field name="name">Mantenimientos Preventivos Programados</field>
        <field name="model">maintenance.request.preventive.details</field>
        <field name="arch" type="xml"> 
            <search> 
                <field name="maintenance_id"/>
                <field name="activity_id"/>
                <field name="type_id"/>
                <field name="name_seq"/>
                <field name="license_plate"/>
                <filter name="preventivos" string="Tipo de mantenimiento: Preventivo" domain="[('preventivos', '!=', False)]"/>
                <!-- <filter name="correctivos" string="Tipo de mantenimiento: Correctivo" domain="[('correctivos', '!=', False)]"/> -->
                <!-- <filter name="stage_id" string="Mtto ejecutados" domain="[('stage_id', 'in', (9,3))]"/> -->
                <separator/>
                <filter name="filter_date" date="request_date" default_period="this_month"/>
                <filter string="Transacciones del día" name="dia" domain="[('request_date','&gt;=', datetime.datetime.combine(context_today(), datetime.time(0,0,0))), ('request_date','&lt;=', datetime.datetime.combine(context_today(), datetime.time(23,59,59)))]" help="Transacciones del día"/>
                <group expand="1" string="Group By">
                    <filter string="Tipos de OT" name="type_id" context="{'group_by':'type_id'}"/>
                    <filter string="Equipos" name="equipment_id" context="{'group_by':'equipment_id'}"/>
                    <filter string="Estados" name="stage_id" context="{'group_by':'stage_id'}"/>
                    <filter string="Tipos de mantenimiento" name="maintenance_type_view" context="{'group_by':'maintenance_type_view'}"/>
                    <filter string="Tipología" name="category_id" context="{'group_by':'category_id'}"/>
                    <filter string="Mantenimientos" name="maintenance_id" context="{'group_by':'maintenance_id'}"/>
                </group>
            </search> 
        </field>
    </record>

    <record id='maintenance_request_preventive_action' model='ir.actions.act_window'>
        <field name="name">Mantenimiento preventivo programado</field>
        <field name="res_model">maintenance.request.preventive.details</field>
        <field name="view_mode">tree,graph,pivot,dashboard</field>
        <field name="context">{"search_default_preventivos":"preventive"}</field>
    </record>

<!--    <menuitem name="Mantenimiento preventivo programados" id="maintenance_request_preventive_menu" parent="maintenance.maintenance_reporting" action="maintenance_request_preventive_action"/>-->

    <record id="maintenance_request_preventive_tree" model="ir.ui.view" > 
        <field name="name">Mantenimiento preventivo programados</field>
        <field name="model">maintenance.request.preventive.details</field>
        <field name="arch" type="xml"> 
            <tree create="0" edit="0">
                <!-- <field name="nbr"/> -->
                <field name="name_seq" optional="show" options="{'no_open': True, 'no_create_edit': True}"/>
                <field name="name" optional="show" options="{'no_open': True, 'no_create': True}"/>
                <field name="type_id" optional="show" options="{'no_open': True, 'no_create': True}"/>
                <field name="equipment_id" optional="show" options="{'no_open': True, 'no_create': True}"/>
                <field name="license_plate" optional="show" options="{'no_open': True, 'no_create': True}"/>
                <field name="model_id" optional="show" options="{'no_open': True, 'no_create': True}"/>
                <field name="category_id" optional="show" options="{'no_open': True, 'no_create': True}"/>
                <field name="activity_id" optional="show" options="{'no_open': True, 'no_create': True}"/>
                <field name="value" optional="show" options="{'no_open': True, 'no_create': True}"/>
                <field name="odometer_actual" optional="show" options="{'no_open': True, 'no_create': True}"/>
                <field name="request_date" optional="show" options="{'no_open': True, 'no_create': True}"/>
                <field name="schedule_date" optional="show" options="{'no_open': True, 'no_create': True}"/>
                <field name="user_id" optional="show" options="{'no_open': True, 'no_create': True}"/>
                <field name="stage_id" optional="show" options="{'no_open': True, 'no_create': True}"/>
                <field name="company_id" optional="show" options="{'no_open': True, 'no_create': True}"/>
            </tree> 
        </field>
    </record>

    <record id="maintenance_request_preventive_details_graph" model="ir.ui.view">
        <field name="model">maintenance.request.preventive.details</field>
        <field name="arch" type="xml">
            <graph type="bar">
                <!-- <field name="stage_id"/> -->
                <field name="maintenance_type_view"/>
            </graph>
        </field>
    </record>

    <record id="maintenance_request_preventive_details_pivot" model="ir.ui.view">
        <field name="model">maintenance.request.preventive.details</field>
        <field name="arch" type="xml">
            <pivot>
                <field name="type_id" type="row"/>
                <field name="equipment_id" type="row"/>
                <field name="stage_id" type="row"/>
            </pivot>
        </field>
    </record>

    <record id="maintenance_request_preventive_details_dashboard" model="ir.ui.view">
        <field name="name">maintenance.request.view.dashboard</field>
        <field name="model">maintenance.request.preventive.details</field>
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <dashboard>
                <view type="graph" ref="report_maintenance_mblz2.maintenance_request_preventive_details_graph"/>
                <group>
                    <group col="7">
                        <widget name="pie_chart" title="Tipos de Mantenimiento" attrs="{'groupby': 'maintenance_type_view'}"/>
                    </group>
                    <group col="5">
                        <aggregate name="total" string="# Total de Tareas Programadas" group_operator="count" field="activity_id" measure="__count__"/>
                        
                        <aggregate name="preventivos" string="# Total de Tareas con Mantenimientos Preventivos" domain="[('maintenance_type_view','=', 'preventive')]" group_operator="count" field="activity_id" measure="__count__"/>

                        <aggregate name="buses_preventivos" string="# Cantidad de equipos con mantenimiento Preventivo" domain="[('preventivos', '!=', False)]" group_operator="count" field="equipment_id" measure="__count__"/>

                        
                        <!-- <aggregate name="ejecutadas" invisible="1" string="#Cumplimiento" domain="[('stage_id', 'in', (9,3))]" group_operator="count" field="activity_id" measure="__count__"/>
                        <formula name="porc_cumplimiento" string="% de Cumplimiento" value="(record.ejecutadas / record.total) * 100"/> -->

                    </group>
                </group>
                <view type="pivot" ref="report_maintenance_mblz2.maintenance_request_preventive_details_pivot"/>
            </dashboard>
        </field>
    </record>
</odoo>
