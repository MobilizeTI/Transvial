<odoo>
    <data>
        <record id="mtto_report_wz_wizard" model="ir.ui.view">
            <field name="name">mtto.report.wz.wizard</field>
            <field name="model">mtto.report.wz</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="rpt_type_id" widget="rpt_type_hierarchy_selection"/>
                        <field name="code_rpt_type" invisible="1"/>
                        <field name="report_temp_id"
                               class="oe_inline"
                               options="{'no_create': True, 'no_create_edit': True, 'no_open': False}"
                               attrs="{
                                    'required': [('code_rpt_type', 'in', ['36', '42'])],
                                    'invisible': [('code_rpt_type', 'not in', ['36', '42'])],
                               }"/>

                        <label for="km_value"
                               string="Kilometraje / Plantilla"
                               attrs="{
                                    'required': [('code_rpt_type', 'in', ['13','14','55'])],
                                    'invisible': [('code_rpt_type', 'not in', ['13', '14','55'])],
                               }"/>
                        <div attrs="{
                                    'required': [('code_rpt_type', 'in', ['13','14','55'])],
                                    'invisible': [('code_rpt_type', 'not in', ['13','14','55'])],
                               }">
                            <field name="km_value"
                                   class="oe_inline"
                                   attrs="{
                                    'required': [('code_rpt_type', 'in', ['13','14','55'])],
                                    'invisible': [('code_rpt_type', 'not in', ['13','14','55'])],
                               }"/>
                            <span>/</span>
                            <field name="report_temp_id"
                                   class="oe_inline"
                                   options="{'no_create': True, 'no_create_edit': True, 'no_open': False}"
                                   attrs="{
                                    'required': [('code_rpt_type', 'in', ['13','14','55'])],
                                    'invisible': [('code_rpt_type', 'not in', ['13','14','55'])],
                               }"/>
                        </div>

                        <field name="range" widget="radio" options="{'horizontal': True}"/>
                    </group>
                    <group attrs="{'invisible': [('range', '=', 'all')]}">
                        <label for="date_start"
                               string="Desde / Hasta"
                               attrs="{'invisible': [('range', '!=', 'dates')]}"/>
                        <div attrs="{'invisible': [('range', '!=', 'dates')]}">
                            <field name="date_start"
                                   class="oe_inline"
                                   options="{'datepicker': {'warn_future': true}}"
                                   attrs="{'required': [('range', '=', 'dates')]}"/>
                            <span></span>
                            <field name="date_end"
                                   class="oe_inline"
                                   options="{'datepicker': {'warn_future': true}}"
                                   attrs="{'required': [('range', '=', 'dates')]}"/>
                        </div>
                        <field name="date_def"
                               options="{'datepicker':{'maxDate': 'now'}}"
                               attrs="{'invisible': [('range', '!=', 'date')]}"/>

                        <label for="month"
                               string="Mes / aÃ±o"
                               attrs="{'invisible': [('range', '!=', 'month')]}"/>
                        <div attrs="{'invisible': [('range', '!=', 'month')]}">
                            <field name="month"
                                   class="oe_inline"
                                   attrs="{'required': [('range', '=', 'month')]}"/>
                            <span>/</span>
                            <field name="year"
                                   class="oe_inline"
                                   attrs="{'required': [('range', '=', 'month')]}"/>
                        </div>
                    </group>
                    <footer>
                        <button string='Aceptar' name="action_view_screen" type="object"
                                class="btn-primary"/>
                        <button string="Cancelar" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_mtto_report_wz" model="ir.actions.act_window">
            <field name="name">Reportes MTTO</field>
            <field name="res_model">mtto.report.wz</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>


        <menuitem
                id="menu_mblz_maintenance_reporting"
                name="Asistente"
                parent="maintenance.maintenance_reporting"
                action="action_mtto_report_wz"
                sequence="-100"/>


        <!--        <menuitem name="Reportes MTTO"-->
        <!--                  id="menu_action_mtto_report_wz"-->
        <!--                  parent="maintenance.maintenance_reporting"-->
        <!--                  action="action_mtto_report_wz"-->
        <!--                  sequence="200"-->
        />
    </data>
</odoo>