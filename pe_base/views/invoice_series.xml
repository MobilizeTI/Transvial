<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="invoice_series_form_view" model="ir.ui.view">
            <field name="name">invoice_series.form</field>
            <field name="model">invoice.series</field>
            <field name="arch" type="xml">
                <form string="Series">
                    <sheet>
                        <div class="oe_title">
                            <label for="name"/>
                            <h1>
                                <field name="name" placeholder="Nombre de la serie..."/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="company_id" groups="base.group_multi_company"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="invoice_series_tree_view" model="ir.ui.view">
            <field name="name">invoice_series.tree</field>
            <field name="model">invoice.series</field>
            <field name="arch" type="xml">
                <tree string="Series">
                    <field name="name"/>
                    <field name="company_id" groups="base.group_multi_company"/>
                </tree>
            </field>
        </record>

        <record id="invoice_series_search_view" model="ir.ui.view">
            <field name="name">invoice_series.search</field>
            <field name="model">invoice.series</field>
            <field name="arch" type="xml">
                <search string="Series">
                    <field name="name"/>
                    <!--                    <group expand="1" string="Group By">-->
                    <!--                        <filter string="Diario" name="group_journal_id" domain="[]"-->
                    <!--                                context="{'group_by':'journal_id'}"/>-->
                    <!--                    </group>-->
                </search>
            </field>
        </record>

        <record id="invoice_series_act_window" model="ir.actions.act_window">
            <field name="name">Series</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">invoice.series</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    No hay ejemplos haga clic aquí para añadir nuevas series.
                </p>
            </field>
        </record>

        <menuitem name="Series"
                  id="invoice_series_menu"
                  parent="account.account_account_menu"
                  action="invoice_series_act_window"
                  sequence="4"
        />

    </data>
</odoo>