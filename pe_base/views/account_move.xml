<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!--        vista lista-->
        <record id="pe_base_view_move_tree" model="ir.ui.view">
            <field name="name">PE_BASE.move.tree</field>
            <field name="model">account.move</field>
            <field name="priority">16</field>
            <field name="inherit_id" ref="account.view_move_tree"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='name']" position="after">
                    <field name="name_seq_system"/>
                </xpath>

            </field>
        </record>


        <record id="base_pe_view_in_invoice_tree" model="ir.ui.view">
            <field name="name">PE_BASE:account.invoice.tree</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_in_invoice_tree"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='company_id']" position="after">
                    <field name="invoice_serie_id"
                           string="Serie"
                           options="{'no_create': True, 'no_create_edit': True, 'no_open': False}"/>
                </xpath>

            </field>
        </record>

        <record id="base_pe_view_out_invoice_tree" model="ir.ui.view">
            <field name="name">PE_BASE:account.invoice.out.tree</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_out_invoice_tree"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='company_id']" position="after">
                    <field name="invoice_serie_id"
                           string="Serie"
                           options="{'no_create': True, 'no_create_edit': True, 'no_open': False}"/>
                </xpath>

            </field>
        </record>

        <record id="pe_base_view_account_invoice_filter" model="ir.ui.view">
            <field name="name">PE_BASE: account.invoice.select</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_account_invoice_filter"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='name']" position="after">
                    <field name="invoice_serie_id" string="Serie"/>
                </xpath>

                <xpath expr="//filter[@name='salesperson']" position="before">
                    <filter string="Serie" name="group_invoice_serie_id" domain="[]"
                            context="{'group_by': 'invoice_serie_id'}"/>
                </xpath>

            </field>
        </record>


        <record id="pe_base_latam_invoice_view_move_form" model="ir.ui.view">
            <field name="name">PE_BASE: latam_account.move.form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="l10n_latam_invoice_document.view_move_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='l10n_latam_document_number']" position="after">
                    <field name="required_serie" invisible="1"/>
                    <field name="invoice_serie_id"
                           attrs="{
                                'invisible': [('required_serie', '=', False)],
                                'required': [('required_serie', '=', True)],
                           }"
                           options="{'no_create': True, 'no_create_edit': True, 'no_open': False}"/>
                </xpath>

            </field>
        </record>


        <record id="pe_base_view_move_form" model="ir.ui.view">
            <field name="name">PE_BASE: account.move.form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">

                <xpath expr="//group[@id='header_left_group']/*" position="before">
                    <field name="name_seq_system" attrs="{'invisible': [
                        ('move_type', 'not in',( 'in_invoice', 'out_invoice'))
                    ]}"/>
                </xpath>

                <xpath expr="//field[@name='line_ids']/tree//field[@name='analytic_tag_ids']" position="after">
                    <field name="invoice_serie_id"
                           attrs="{
                                'column_invisible': [('parent.required_serie', '=', False)],
                           }"
                    />
                </xpath>

            </field>
        </record>
    </data>
</odoo>