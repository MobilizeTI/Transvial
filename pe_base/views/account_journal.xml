<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="base_pe_view_account_journal_form" model="ir.ui.view">
            <field name="name">BASE_PE: account.journal.form</field>
            <field name="model">account.journal</field>
            <field name="inherit_id" ref="account.view_account_journal_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='type']" position="after">
                    <field name="required_serie" attrs="{'invisible': [('type', 'not in', ('sale', 'purchase'))]}"/>
                </xpath>

            </field>
        </record>
    </data>
</odoo>