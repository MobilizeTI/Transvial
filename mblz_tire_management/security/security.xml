<?xml version="1.0" ?>
<odoo>
    <record id="tire_management_category" model="ir.module.category">
        <field name="name">Tire Management</field>
    </record>

    <!-- Llantas User Group -->
    <record id="tire_management_group_user" model="res.groups">
        <field name="name">User</field>
        <field name="category_id"
               ref="tire_management_category"/>
        <field name="implied_ids"
               eval="[(4, ref('base.group_user'))]"/>
    </record>

    <!-- Llantas Manager Group -->
    <record id="tire_management_group_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id"
               ref="tire_management_category"/>
        <field name="implied_ids"
               eval="[(4, ref('tire_management_group_user'))]"/>
        <field name="users"
               eval="[(4, ref('base.user_root')),
                  (4, ref('base.user_admin'))]"/>
    </record>
</odoo>
