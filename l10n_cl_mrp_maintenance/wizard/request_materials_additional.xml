<odoo>
    <data>

        <record id="request_materials_additional_form" model="ir.ui.view">
            <field name="name">Request Materials Additional</field>
            <field name="model">request.materials.additional</field>
            <field name="arch" type="xml">
                <form>
                    <field name="task_id" invisible="1"/>
                    <group>
                        <field name='product_line_ids'
                               nolabel="1"
                               mode="tree"
                               widget="one2many"
                               context="{'default_task_id': task_id, 'default_wz_material_add_id': id}">
                            <tree editable="bottom"
                                  string="Materials">
                                <field name="wz_material_add_id" invisible="1"/>
                                <field name="task_id" invisible="1"/>
                                <field name="product_id" string="Product"
                                       domain="[('type', '=', 'product')]"
                                       options="{'no_create': True, 'no_create_edit': True, 'no_open': False}"
                                       context="{'default_type': 'product'}"/>
                                <field name="product_uom_id"/>
                                <field name="system_class_id"
                                       options="{'no_open': True, 'no_create': True}"/>
                                <field name="product_qty"/>
                                <field name="price_unit" string="Precio Unit."/>
                                <field name="price_total" sum="price_total"/>


                                <field name="company_id" groups="base.group_multi_company"/>
                            </tree>
                        </field>

                    </group>
                    <group>
                        <field name="approval_reason"
                               placeholder="Description of the request for additional materials ..."
                               class="oe_inline"
                               nolabel="1"/>
                    </group>
                    <group>
                        <field name="company_id" groups="base.group_multi_company"/>
                    </group>
                    <footer>
                        <button name="action_create" string="Create"
                                type="object" class="oe_highlight" icon="fa-send"/>
                        o
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="request_materials_additional_wizard_act_window" model="ir.actions.act_window">
            <field name="name">Add Components</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">request.materials.additional</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
    </data>
</odoo>