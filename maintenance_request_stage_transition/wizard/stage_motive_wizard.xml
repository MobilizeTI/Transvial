<odoo>
    <data>
        <record id="stage_motive_wizard_view_form" model="ir.ui.view">
            <field name="name">stage.motive.wizard.wizard</field>
            <field name="model">stage.motive.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <group>
                            <field name="stage_id" invisible="1"/>
                            <field name="request_id" invisible="1"/>
                            <field name="motive_id"/>
                        </group>
                        <group>
                            <field name="comment"/>
                        </group>
                    </group>
                    <footer>
                        <button type="object"
                                name="action_confirm"
                                class="oe_highlight"
                                string="Confirm"/>
                        <button special="cancel" string="Cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_stage_motive_wizard" model="ir.actions.act_window">
            <field name="name">Motive</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">stage.motive.wizard</field>
            <field name="view_mode">form</field>
            <field name="context">{}</field>
            <field name="target">new</field>
        </record>
    </data>
</odoo>